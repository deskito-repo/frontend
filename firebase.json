{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "monolithic",
                    "region": "asia-northeast3",
                    "pinTag": true
                }
            },
            {
                "source": "!/api/**",
                "destination": "/index.html"
            }
        ]
    }
}